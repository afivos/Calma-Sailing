<div id="modal-syros" class="uk-modal-full" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-full uk-close-large" type="button" aria-label="close modal-syros" uk-close><span style="display: none;">Close modal-syros</span></button>
